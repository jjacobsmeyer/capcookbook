<div class="commentbody">
  <small><%= comment.body %></small>
  <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
    <small>
      <div class="commentago"><%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if policy(comment).destroy? %>
      | <%= link_to "Delete",[@recipe, comment], method: :delete %>
      <% end %></div>
    </small>
  <% end %>
</div>
