<div id="wrapper">
  <h1><%= @category ? @category.capitalize : "All Recipes" %></h1>

  <% if policy(Recipe.new).create? %>
    <%= link_to "New Recipe", new_recipe_path, class: 'btn btn-success' %>
  <% end %>

  <div id="flex-recipe">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <h1><%= link_to recipe.title, recipe %></h1>
        <p><%= recipe.category %></p>
      </div>
    <% end %>
  </div>
</div>
