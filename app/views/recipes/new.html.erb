<div id="wrapper">
  <h1>New Recipe</h1>

  <div class="row">
    <div class="col-md-12">
      <%= form_for @recipe do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter recipe title" %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.text_field :category, class: 'form-control', placeholder: "Enter food category" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter recipe body" %>
        </div>
        <div class="form-group">
          <%= f.label :ingredient %>
          <%= f.text_area :ingredient, rows: 8, class: 'form-control', placeholder: "Enter recipe ingredients" %>
        </div>
        <div class="form-group">
          <%= f.label :food_photo %>
          <%= f.file_field :food_photo %>
          <%= f.hidden_field :food_photo_cache %>
        </div>
        <%= f.fields_for :recipe_attachments do |p| %>
          <div class="field">
            <%= p.label :recipe_attachment %><br>
            <%= p.file_field :recipe_attachment, :multiple => true, name: "recipe_attachments[images][]" %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
</div>
